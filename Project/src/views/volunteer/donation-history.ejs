<%- include('../partials/header') %>

<%- include('../partials/navbar-dark') %>

<div class="d-flex am-dark" style="height: 95vh;">
    
    <%- include('../partials/sidebar-dark') %>

    <div class="content w-100 p-4 ngo-dashboard" style="overflow-y: auto;">
        <div class="w-100 text-white">
            <div class="mb-4">
                <h4>Donation History</h4>
                <p>View your completed pickup and delivery tasks</p>
            </div>
            <div class="mb-5 p-4 rounded" style="background-color: var(--am-darktheme-light);">
                <div class="d-flex justify-content-between align-items-center border-bottom border-secondary mb-4"
                    style="color: var(--am-darktheme-font);">
                    <h3>Completed tasks</h3>
                </div>
                <div class="table-responsive am-dark-table">
                    <table class="table align-middle rounded-2 shadow-sm overflow-hidden border-secondary">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Food Items</th>
                                <th>Type</th>
                                <th>Cook Date &amp; Time</th>
                                <th>Status</th>
                                <th>Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="all-table-body">
                            <% if (!assignedTeams || assignedTeams.length===0) { %>
                                <tr>
                                    <td colspan="9" class="text-center py-4 text-muted">
                                        No active assignments found.
                                    </td>
                                </tr>
                                <% } %>
                    
                                    <% assignedTeams.forEach((team, index)=> {
                                        const donation = team.donationId;
                                        const foodItems = donation.items || [];
                                        const itemNames = foodItems.map(item => item.name);
                                        %>
                                        <tr>
                                            <!-- # -->
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                    
                                            <!-- Title -->
                                            <td class="col-title">
                                                <%= donation.title %>
                                            </td>
                    
                                            <!-- Food Items -->
                                            <td class="col-items">
                                                <i class="bi bi-box-seam pe-1" style="color: #bababa; font-size: 0.9rem;"></i>
                                                <% if (itemNames.length> 0) { %>
                                                    <%= itemNames.join(', ') %>
                                    <% } else { %>
                                        <span class="text-muted small">No items</span>
                                    <% } %>
                                </td>
                    
                                <!-- ✅ Source -->
                                <td>
                                    <span class="badge bg-info text-dark px-3 py-2 rounded-4">
                                        <%= donation.source || ' N/A' %>
                                                        </span>
                                            </td>
                    
                                            <!-- ✅ Pickup Location (Donation Address) -->
                                            <td class="col-location">
                                                <i class="fa-solid fa-location-dot pe-1 text-danger"></i>
                                                <%= donation.address %>, <%= donation.city %>, <%= donation.state %>
                                            </td>
                    
                                            <!-- ✅ Delivery Location (From DonationTeam) -->
                                            <td class="col-location">
                                                <% if (team.deliverySchedule && team.deliverySchedule.location) { %>
                                                    <i class="fa-solid fa-truck pe-1 text-success"></i>
                                                    <%= team.deliverySchedule.location %>
                                                        <% } else { %>
                                                            <span class="text-muted small">Not assigned yet</span>
                                                            <% } %>
                                            </td>
                    
                                            <!-- Images -->
                                            <td class="col-images">
                                                <% if (donation.images && donation.images.length) { %>
                                                    <div class="border border-secondary rounded p-1 text-center mx-auto"
                                                        style="max-width: 100px;">
                                                        <img src="/<%= donation.images[0] %>" alt="food item" class="img-fluid">
                                                        <div class="text-center hover-blue" data-bs-toggle="modal"
                                                            data-bs-target="#images-modal-<%= donation._id %>">
                                                            View all
                                                        </div>
                                                    </div>
                                                    <% } else { %>
                                                        <span class="text-muted small">No images</span>
                                                        <% } %>
                                            </td>
                    
                                            <!-- Actions -->
                                            <td>
                                                <div class="mx-auto text-center">
                                                    <a href="/donations/<%= donation._id %>" class="btn btn-sm btn-outline-primary m-1"
                                                        title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                    
                                        <!-- Images Modal -->
                                        <div class="modal fade" id="images-modal-<%= donation._id %>" tabindex="-1">
                                            <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Donation Images</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body d-flex flex-wrap gap-2">
                                                        <% (donation.images || []).forEach(function(img) { %>
                                                            <img src="/<%= img %>" class="img-fluid rounded" style="max-width: 150px;">
                                                            <% }); %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                    
                                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>